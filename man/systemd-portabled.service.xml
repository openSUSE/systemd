<refentry id="systemd-portabled.service" conditional='ENABLE_PORTABLED'>

  <refentryinfo>
    <title>systemd-portabled.service</title>
    <productname>systemd</productname>
  </refentryinfo>

  <refmeta>
    <refentrytitle>systemd-portabled.service</refentrytitle>
